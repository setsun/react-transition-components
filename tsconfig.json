{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "amd",
    "moduleResolution": "node",
    "jsx": "react",
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outFile": "dist/types/index.d.ts"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./node_modules/**/*",
    "./src/story-components/**",
    "./src/**/*.stories.tsx",
    "./src/**/*.spec.tsx"
  ]
}
